# AWS_ACCESS_KEY_ID=tu_access_key
# AWS_SECRET_ACCESS_KEY=tu_secret_key
# AWS_DEFAULT_REGION=us-east-1
# MAIL_FROM_ADDRESS=noreply@tudominio.com
# MAIL_FROM_NAME="Upper Control"

# ========================================
# CONFIGURACIÓN ACTUAL (LOG)
# ========================================
# Solo guarda los correos en logs - No envía correos reales
# Útil para desarrollo local sin configurar SMTP

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ========================================
# NOTAS IMPORTANTES
# ========================================
# 
# 1. Después de cambiar la configuración, ejecuta:
#    php artisan config:clear
#
# 2. Para probar el correo:
#    php artisan test:email tucorreo@ejemplo.com
#
# 3. Si usas colas (recomendado para producción):
#    - Cambia QUEUE_CONNECTION=database
#    - Ejecuta: php artisan queue:table
#    - Ejecuta: php artisan migrate
#    - Inicia worker: php artisan queue:work
#
# 4. Revisa logs en caso de error:
#    storage/logs/laravel.log

# ========================================
# CONFIGURACIÓN DE RECORDATORIOS
# ========================================
# Intervalo de tiempo (en minutos) entre recordatorios automáticos
# de validación de OT para clientes con órdenes pendientes de autorización
#
# PARA PRUEBAS: 1 (se envía cada 1 minuto)
# PARA PRODUCCIÓN: 360 (se envía cada 6 horas)

RECORDATORIO_VALIDACION_INTERVALO=1

# Para cambiar a producción (6 horas):
# RECORDATORIO_VALIDACION_INTERVALO=360

# Para 12 horas:
# RECORDATORIO_VALIDACION_INTERVALO=720

# Para 24 horas:
# RECORDATORIO_VALIDACION_INTERVALO=1440
